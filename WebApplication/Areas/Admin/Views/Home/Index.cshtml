@model IQueryable<ServiceItem>

@{
    Layout = "_AdminLayout";
    string strTitle = "Admin Page";
    ViewBag.Title = strTitle;
}
<div>

    <div class="adminpage__block">

        <div class="element__bth">
            <a class="element__bth" asp-controller="ServiceItems" asp-action="Edit" asp-route-id="">Add char</a>
        </div>
        @if (Model.Any()) {
            <div>
                @foreach (ServiceItem entity in Model) {
                    <div class="bth__action">
                        <a class="element__bth" asp-area="Admin" asp-controller="ServiceItems" asp-action="Edit" asp-route-id="@entity.Id">Edit</a>
                        <form class="element__bth" asp-area="Admin" id="form-@entity.Id" asp-controller="ServiceItems" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@entity.Id">
                            <a class="element__bth"  href="#" onclick="document.getElementById('form-@entity.Id').submit();">Delete</a>
                        </form>

                        <a class="element__bth" asp-area="" asp-controller="Services" asp-action="Index" asp-route-id="@entity.Id">
                            @($"{entity.Title}")
                           
                        </a>
                        <img class="element__bth" alt="image" src="@entity.Image">
                    </div>
                }
            </div>
        }

    </div>
    <div>

    </div>
    <div>
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <input type="submit" value="Exit">
        </form>
    </div>
</div>

@section button{
    <div class="char__door">
        <a href="/" >
            <img class="exit__door" src="~/images/char_door.png" alt="char_door">
        </a>
    </div>
}