@model ServiceItem
@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}

<script src="~/js/ckeditor/ckeditor.js"></script>

<div>
<h2>@strTitle</h2>
    <div>
        <form asp-area="Admin" asp-controller="ServiceItems" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id">
            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="Title"></label>
                <input asp-for="Title">
                <span asp-validation-for="Title"></span>
            </div>
            <div>
                <label asp-for="Text"></label>
                <textarea asp-for="Text"></textarea>
                <span asp-validation-for="Text"></span>
            </div>
            <div>
                <label asp-for="NameChar"></label>
                <input asp-for="NameChar">
                <span asp-validation-for="NameChar"></span>
            </div>
            <div>
                <label asp-for="NameRank"></label>
                <input asp-for="NameRank">
                <span asp-validation-for="NameRank"></span>
            </div>
            <div>
                <label asp-for="Quote"></label>
                <input asp-for="Quote">
                <span asp-validation-for="Quote"></span>
            </div>
            <input type="submit" value="Save">
        </form>
    </div>
</div>

<script>
    window.onLoad = function (){
        var newCKEdit = CKEDITOR.replace('@Html.IdFor(x=>x.Text)');   
    }
</script>